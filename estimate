    <script>
        let selectedFiles = [];

        // íŒŒì¼ ì—…ë¡œë“œ ì²˜ë¦¬
        const fileUpload = document.getElementById('fileUpload');
        const fileInput = document.getElementById('photos');
        const fileList = document.getElementById('fileList');

        fileUpload.addEventListener('click', () => fileInput.click());

        fileUpload.addEventListener('dragover', (e) => {
            e.preventDefault();
            fileUpload.classList.add('dragover');
        });

        fileUpload.addEventListener('dragleave', () => {
            fileUpload.classList.remove('dragover');
        });

        fileUpload.addEventListener('drop', (e) => {
            e.preventDefault();
            fileUpload.classList.remove('dragover');
            const files = Array.from(e.dataTransfer.files).filter(file => file.type.startsWith('image/'));
            addFiles(files);
        });

        fileInput.addEventListener('change', (e) => {
            const files = Array.from(e.target.files);
            addFiles(files);
        });

        function addFiles(files) {
            files.forEach(file => {
                if (!selectedFiles.find(f => f.name === file.name && f.size === file.size)) {
                    selectedFiles.push(file);
                }
            });
            updateFileList();
        }

        function updateFileList() {
            fileList.innerHTML = '';
            selectedFiles.forEach((file, index) => {
                const fileItem = document.createElement('div');
                fileItem.className = 'file-item';
                fileItem.innerHTML = `
                    <span>ğŸ“· ${file.name} (${(file.size / 1024 / 1024).toFixed(2)} MB)</span>
                    <button type="button" class="remove-file" onclick="removeFile(${index})">Ã—</button>
                `;
                fileList.appendChild(fileItem);
            });
        }

        function removeFile(index) {
            selectedFiles.splice(index, 1);
            updateFileList();
        }

        // ì˜¤ëŠ˜ ë‚ ì§œ ì´í›„ë§Œ ì„ íƒ ê°€ëŠ¥í•˜ë„ë¡ ì„¤ì •
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('serviceDate').min = today;

        // í¼ ì œì¶œ ì²˜ë¦¬
        document.getElementById('quoteForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData();
            const name = document.getElementById('name').value;
            const phone = document.getElementById('phone').value;
            const serviceDate = document.getElementById('serviceDate').value;
            
            // ì„ íƒëœ ì„œë¹„ìŠ¤ ìˆ˜ì§‘
            const selectedServices = Array.from(document.querySelectorAll('input[name="services"]:checked'))
                .map(cb => cb.value);
            
            if (selectedServices.length === 0) {
                alert('ìµœì†Œ í•˜ë‚˜ì˜ ì„œë¹„ìŠ¤ë¥¼ ì„ íƒí•´ì£¼ì„¸ìš”.');
                return;
            }

            // í¼ ë°ì´í„° êµ¬ì„±
            const quoteData = {
                name,
                phone,
                services: selectedServices,
                serviceDate,
                photos: selectedFiles.map(file => file.name),
                submittedAt: new Date().toLocaleString('ko-KR')
            };

            // ì‹¤ì œë¡œëŠ” ì„œë²„ë¡œ ì „ì†¡ë˜ì–´ì•¼ í•˜ëŠ” ë¶€ë¶„
            console.log('ê²¬ì  ìš”ì²­ ë°ì´í„°:', quoteData);
            console.log('ì—…ë¡œë“œëœ íŒŒì¼ë“¤:', selectedFiles);

            // ì„±ê³µ ëª¨ë‹¬ í‘œì‹œ
            document.getElementById('successModal').style.display = 'block';
            
            // í¼ ì´ˆê¸°í™”
            this.reset();
            selectedFiles = [];
            updateFileList();
        });

        function closeModal() {
            document.getElementById('successModal').style.display = 'none';
        }

        // ëª¨ë‹¬ ì™¸ë¶€ í´ë¦­ ì‹œ ë‹«ê¸°
        window.addEventListener('click', function(e) {
            const modal = document.getElementById('successModal');
            if (e.target === modal) {
                closeModal();
            }
        });

        // ì „í™”ë²ˆí˜¸ ìë™ í¬ë§·íŒ…
        document.getElementById('phone').addEventListener('input', function(e) {
            let value = e.target.value.replace(/[^0-9]/g, '');
            if (value.length > 3 && value.length <= 7) {
                value = value.slice(0, 3) + '-' + value.slice(3);
            } else if (value.length > 7) {
                value = value.slice(0, 3) + '-' + value.slice(3, 7) + '-' + value.slice(7, 11);
            }
            e.target.value = value;
        });
    </script>
